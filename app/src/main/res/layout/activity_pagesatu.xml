<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pagesatu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manajemen Informatika"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/orange"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Profil"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="30dp"
            android:textColor="@color/black"
            android:id="@+id/a"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puji syukur kami panjatkan kehadirat Tuhan Yang Maha Esa yang telah
menganugerahkan banyak nikmat sehingga kami dapat menyusun makalah
Pancasila. Makalah ini berisi tentang Analisis terhadap kasus pengangkatan
Mentri energi dan sumber daya mineral, Archandra Tahar. Maka dari itu saya
memberi judul makalah ini adalah  Analisis terhadap kasus pengangkatan Mentri
energi dan sumber daya mineral, Archandra Tahar.
"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="30dp"
            android:textColor="@color/black"
            android:id="@+id/b"
            android:layout_below="@+id/a"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back1"
            android:text="Kembali"
            android:backgroundTint="@color/orange"
            android:layout_below="@+id/b"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>